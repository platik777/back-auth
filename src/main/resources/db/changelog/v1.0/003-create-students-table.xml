<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-students-table" author="migration">
        <createTable tableName="students" schemaName="public">
            <column name="student_uuid" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="last_confirmation" type="TIMESTAMPTZ"/>
            <column name="user_id" type="INTEGER">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="start_year" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="end_year" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="student_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="educational_institutions_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="students"
                baseColumnNames="user_id"
                constraintName="fk_students_user"
                referencedTableName="users"
                referencedColumnNames="user_id"
                onDelete="CASCADE"/>

        <createIndex tableName="students" indexName="idx_students_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="students" indexName="idx_students_edu_uuid">
            <column name="educational_institutions_uuid"/>
        </createIndex>

        <createIndex tableName="students" indexName="idx_students_student_id">
            <column name="student_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>