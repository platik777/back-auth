<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-company-table" author="migration">
        <createTable tableName="company" schemaName="public">
            <column name="company_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <!-- Банковские реквизиты -->
            <column name="bank_name" type="VARCHAR(255)"/>
            <column name="account_number" type="VARCHAR(255)"/>
            <column name="bic" type="VARCHAR(255)"/>
            <column name="kpp_bank" type="VARCHAR(255)"/>
            <column name="tax_bank" type="VARCHAR(255)"/>
            <column name="correspondent_account" type="VARCHAR(255)"/>

            <!-- Информация о компании -->
            <column name="full_title" type="VARCHAR(500)"/>
            <column name="ogrn" type="VARCHAR(255)"/>
            <column name="ogrnip" type="VARCHAR(255)"/>
            <column name="kpp" type="VARCHAR(255)"/>
            <column name="legal_address" type="TEXT"/>
            <column name="post_address" type="TEXT"/>
            <column name="tax_number" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(100)" defaultValue="russia">
                <constraints nullable="false"/>
            </column>
            <column name="kio" type="VARCHAR(255)"/>

            <!-- Для образовательных учреждений -->
            <column name="license_number" type="VARCHAR(255)"/>
            <column name="license_issue_date" type="VARCHAR(255)"/>

            <!-- Список пользователей компании -->
            <column name="users_list" type="JSONB"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="company"
                baseColumnNames="owner_id"
                constraintName="fk_company_owner"
                referencedTableName="users"
                referencedColumnNames="user_id"
                onDelete="CASCADE"/>

        <createIndex tableName="company" indexName="idx_company_owner_id">
            <column name="owner_id"/>
        </createIndex>

        <createIndex tableName="company" indexName="idx_company_tax_number">
            <column name="tax_number"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>